<aiplugs-blade label="Sample">
    <form id="list" method="GET" class="flex flex-column">
        <aiplugs-actions>
            <button is="aiplugs-button">Button</button>
            <button is="aiplugs-button" color="primary">Button</button>
            <button is="aiplugs-button" looks="block" color="primary">Button</button>
            <span is="aiplugs-space"></span>
            <button type="button" is="aiplugs-button" looks="block" color="primary" ic-get-from="#delete-dialog" ic-target="body" ic-swap-style="append">Button</button>
            <aiplugs-dialog id="delete-dialog">
                <p slot="content">本当に削除しますか？</p>
                <div slot="actions">
                    <button type="submit" is="aiplugs-button" color="warning" close="aiplugs-dialog">Yes</button>
                    <button type="button" is="aiplugs-button" looks="block" color="primary" close="aiplugs-dialog">No</button>
                </div>            
            </aiplugs-dialog>
        </aiplugs-actions>
        <div class="flex" style="padding:0 24px; overflow-y: scroll;">
            <aiplugs-tag name="Tag" label="タグ" description="たぐです。" selection=@tags value=@tagValue ignore-case max-length="4" min-length="3"></aiplugs-tag>
            <aiplugs-code label="Wysiwyg" name="Wysiwyg" description="コードコード" required lang="html" Value=@code>
                <template>
                    <aiplugs-blade label="Editor" wide expanded>
                        <form id="form2">
                            <aiplugs-actions>
                                <button type="submit" is="aiplugs-button" looks="block" ic-put-to="//#Wysiwyg/value" ic-target="closest .aiplugs-blade" ic-replace-target="true">Close</button>
                                <button type="button" is="aiplugs-button" open="#form2-cancel-dialog">Discard Changes</button>
                                <aiplugs-dialog id="form2-cancel-dialog">
                                    <p slot="content">破棄しますか？</p>
                                    <div slot="actions">
                                        <button type="submit" is="aiplugs-button" color="warning" close="aiplugs-blade">Yes</button>
                                        <button type="button" is="aiplugs-button" looks="block" color="primary" close="aiplugs-dialog">No</button>
                                    </div>
                                </aiplugs-dialog>
                            </aiplugs-actions>
                            <aiplugs-tinymce name="value" value-from="#Wysiwyg" aiplugs-code="editor" modal-image="~/modal/file" modal-video="~/modal/file"></aiplugs-tinymce>
                        </form>
                    </aiplugs-blade>
                </template>
            </aiplugs-code>
            <aiplugs-code label="HTML" name="HTML" description="コードコード" required lang="html" Value=@code>
                <template>
                    <aiplugs-blade label="Editor" wide expanded>
                        <form id="form2">
